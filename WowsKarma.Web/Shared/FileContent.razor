@inject FileContentLoader Loader

@markup

@code {


    [Parameter] public string ContentFilePath { get; set; }

    private MarkupString markup;

    protected override async Task OnInitializedAsync()
    {
        markup = (MarkupString)(await Loader.LoadContent(ContentFilePath, CancellationToken.None) ?? string.Empty);
        await base.OnInitializedAsync();
    }
}